{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block stylesheets %}
<style>
    .login-container {
        max-width: 350px;
        margin: 40px auto;
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 1px;
        padding: 40px;
        text-align: center;
    }

    .login-logo {
        font-size: 40px;
        margin-bottom: 30px;
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .form-control {
        padding: 9px 0 7px 8px;
        border: 1px solid var(--border-color);
        border-radius: 3px;
        background: #fafafa;
    }

    .login-btn {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 8px;
        border-radius: 4px;
        font-weight: 600;
        cursor: pointer;
    }

    .register-link {
        margin-top: 20px;
        padding: 20px;
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 1px;
    }

    .register-link a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
    }
</style>
{% endblock %}

